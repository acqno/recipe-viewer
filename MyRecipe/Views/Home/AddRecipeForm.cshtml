@model Recipe
@{
    ViewBag.Title = "Add Recipe";
}


<link rel="stylesheet" href="~/css/bootstrap.css" />
<link rel="stylesheet" href="~/css/main.css" />
<link rel="stylesheet" href="~/css/Form.css" />

<div class="container">
    <h1 class="home-title">My Recipe Viewer</h1>
    <nav class="main-nav">
        <ul class="main-nav__items">
            <li class="main-nav__item">
                <a asp-action="Index" class="item-anchor">Home</a>
            </li>
            <li class="main-nav__item">
                <a asp-action="RecipesList" class="item-anchor">Recipe List</a>
            </li>
            <li class="main-nav__item">
                <a asp-action="AddRecipeForm" class="item-anchor">Add Recipe</a>
            </li>
            <li class="main-nav__item">
                <a asp-action="Review" class="item-anchor">Reviews</a>
            </li>
        </ul>
    </nav>
    <p class="home-paragraph">Welcome to the recipe viewer - Create, Save, and View all your favourite recipes!</p>

    <form class="form-container" asp-action="AddRecipeForm" method="post">
        <div class="form-group">
            <label asp-for="Name">Recipe Name</label>
            <input class="form-control" asp-for="Name" placeholder="Enter Recipe Name">
        </div>
        <div class="form-group">
            <label asp-for="Ingredients" -for="">Ingredients</label>
            <textarea class="form-control" asp-for="Ingredients" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Instructions">Instructions</label>
            <textarea class="form-control" asp-for="Instructions" rows="3"></textarea>
        </div>
        <div class="submit-button__container">
            <button type="submit" class="btn btn-primary submit-button">Submit Recipe</button>
        </div>
    </form>
</div>

<footer>
    <div class="footer-container">
        <h6 class="footer-tag">
            &copy; My Recipe Viewer 2019 - Made by Alvin Quijano
        </h6>
    </div>
</footer>
